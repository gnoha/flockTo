<div class='container-fluid'>
  <div class='row landing'>
    <div class='user-form-wrapper col-xs-4 col-xs-offset-4'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <form class= 'user-form' action="<%= users_url%>" method="POST">
            <input type="hidden" name="authenticity_token"
                   value="form_authenticity_token">

            <div class='form-group'>
              <label><h1>Sign Up</h1></label>
              <ul class="errors">
                <% if flash[:errors]               %>
                <label>
                <%  flash[:errors].each do |error| %>
                    <li> <%= error %></li>
                <%  end                            %>
                </label>
                <% end                             %>
              </ul>
            </div>

            <div class='form-group'>
              <label class="username-input">Username
                <input type="text" class='form-control' name=user[username] value="<%= @user.username%>" placeholder="Username">
              </label>
            </div>

            <div class='form-group'>
              <label class="password-input">Password
                <input type="password" class='form-control' name=user[password] placeholder="Password">
              </label>
            </div>

            <div class='form-group'>
              <label class="password-input">Tell Us a Little About Yourself
                <textarea type="text" class='form-control' name=user[bio] placeholder="I like to..."></textarea>
              </label>
            </div>


            <div class='form-group'>
              <input type="submit" id='sign-up-button' class='btn btn-sm btn-primary pull-right' value="Sign Up">
            </div>
          </form>
        </div>
        <div class='panel-footer'>
          <a><%= link_to "Already signed Up? Sign In Here", new_session_url %></a>
        </div>
      </div>
    </div>
  </div>
</div>
