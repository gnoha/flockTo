<div class='row'>
  <div class='col-xs-6 col-xs-offset-3'>
    <form class= 'user-form' action="<%= session_url%>" method="POST">
      <input type="hidden" name="authenticity_token"
             value="form_authenticity_token">

      <div class='form-group'>
        <label class='col-xs-offset-1'><h1>Sign In</h1></label>
        <ul class="errors">
          <% if flash[:errors]               %>
          <label>
          <%  flash[:errors].each do |error| %>
              <li> <%= error %></li>
          <%  end                            %>
          </label>
          <% end                             %>
        </ul>
      </div>

      <div class='form-group row'>
        <label class="username-input col-xs-3 col-xs-offset-1 title">Username</label>
          <input class='col-xs-6 input-lg' type="text" name=user[username] placeholder="Username">
      </div>

      <div class='form-group row'>
        <label class="password-input col-xs-3 col-xs-offset-1 title">Password</label>
          <input class='col-xs-6 input-lg' type="password" name=user[password] placeholder="Password">
      </div>

      <div class='form-group row'>
        <input class='col-xs-3 col-xs-offset-4 btn-md' type="submit" value="Sign In">
      </div>

      <div class='form-group row'>
        <a class='col-xs-offset-4'><%= link_to "Sign Up Here.", new_user_url %></a>
      </div>
    </form>
  </div>
</div>
