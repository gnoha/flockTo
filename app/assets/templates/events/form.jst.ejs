<% if (!edit) {%>
  <div class='form-button-wrapper col-xs-12'>
    <div class='form-button open-modal'>
      <div class="form-button-title">Create an Event</div>
    </div>
  </div>
<%} else {%>
  <div class='open-edit-modal'>Edit Event</div>
<% }%>

<div class='modal fade' id='<%= id%>' tabindex=-1 role='dialog'
  aria-labelledby='myModalLabel' aria-hidden='true'>
  <div class="modal-dialog">
    <div class="modal-content col-xs-8 col-xs-offset-2">
      <div class="modal-header">
        <label><%= title%></label>
        <button type="button" class="close" data-dismiss="modal"
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class='modal-body'>
        <form>
          <ul class='error-list'></ul>
          <div class='form-group'>
            <label>Title
              <input type="text" class="event-title form-control"
                name="event[title]" value='<%= eventModel.escape('title')%>'>
            </label>
          </div>

          <div class='form-group'>
            <label>Date
              <input type="date" class="event-date form-control"
                id="datepicker" name="event[date]" min='<%= minDate%>'
                value='<%= eventModel.escape('date')%>'>
            </label>
          </div>

          <div class='form-group'>
            <label>Location
              <input type="text" class="event-date form-control"
                name="event[location]" value='<%= eventModel.escape('location')%>'>
            </label>
          </div>

          <div class='form-group'>
            <label>Description<br>
              <textarea class="event-description form-control"
              name="event[description]"><%= eventModel.escape('description')%></textarea>
            </label>
          </div>
        </form>
      </div>
      <div class='modal-footer'>
        <button type='button' class="submit btn btn-sm btn-primary"><%= button%></button>
      </div>
    </div>
  </div>
</div>
