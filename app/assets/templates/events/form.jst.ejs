<div class='card col-xs-12 col-sm-6 col-md-4 open-modal'>
  <div class="title card-title">Create an Event</div>
</div>

<div class='modal fade' id='myModal' tabindex=-1 role='dialog'
  aria-labelledby='myModalLabel' aria-hidden='true'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <div class='form-group'>
          <form class='form-horizontal'>
            <ul class='error-list'></ul>
            <div class='form-group'>
              <label>Title
                <input type="text" class="event-title form-control" name="event[title]">
              </label>
              <label>Date
                <input type="text" class="event-date form-control" id="datepicker" name="event[date]">
              </label>
              <label>Location
                  <input type="text" class="event-date form-control" name="event[location]">
              </label>
            </div>
            <div class='form-group'>
              <label>Description<br>
                  <textarea class="event-description form-control" name="event[description]"></textarea>
              </label><br>
            </div>
          </form>
        </div>
      </div>
      <div 'modal-footer'>
        <button type='button' class="submit btn btn-sm">Create Event</button>
      </div>
    </div>
  </div>
</div>
